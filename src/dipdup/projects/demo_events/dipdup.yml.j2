spec_version: 1.2
package: {{ cookiecutter.package }}

database:
  kind: sqlite
  path: {{ cookiecutter.project_name }}.sqlite3

datasources:
  tzkt:
    kind: tzkt
    url: https://api.ghostnet.tzkt.io

contracts:
  events_contract:
    address: KT1Up6AMehze2VTdt3w85xaZPtrEWn1AeyR3

indexes:
  events:
    kind: event
    datasource: tzkt
    handlers:
      - callback: on_move_event
        contract: events_contract
        tag: move
      - callback: on_roll_event
        contract: events_contract
        tag: roll
      - callback: on_other_event
        contract: events_contract
