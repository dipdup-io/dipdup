spec_version: 2.0
package: {{ cookiecutter.package }}

database:
  kind: sqlite
  path: {{ cookiecutter.package }}.sqlite3

datasources:
  tzkt_mainnet:
    kind: tezos.tzkt
    url: ${TZKT_URL:-https://api.tzkt.io}
    http:
      batch_size: 10000

indexes:
  mainnet_operations:
    kind: tezos.tzkt.operations_unfiltered
    datasource: tzkt_mainnet
    types:
      - origination
      - transaction
      - migration
    callback: on_operation
    first_level: 1589000
    last_level: 1590000
