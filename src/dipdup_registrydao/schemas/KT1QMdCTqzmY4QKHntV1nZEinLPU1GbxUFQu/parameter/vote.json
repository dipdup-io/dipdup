{
    "$schema": "http://json-schema.org/draft/2019-09/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "proposal_key": {
                "type": "string",
                "$comment": "bytes"
            },
            "vote_type": {
                "type": "boolean",
                "$comment": "bool"
            },
            "vote_amount": {
                "type": "string",
                "$comment": "nat"
            },
            "permit": {
                "oneOf": [
                    {
                        "type": "object",
                        "properties": {
                            "key": {
                                "type": "string",
                                "$comment": "key"
                            },
                            "signature": {
                                "type": "string",
                                "$comment": "signature"
                            }
                        },
                        "required": [
                            "key",
                            "signature"
                        ],
                        "additionalProperties": false,
                        "$comment": "pair"
                    },
                    {
                        "type": "null"
                    }
                ],
                "$comment": "option"
            }
        },
        "required": [
            "proposal_key",
            "vote_type",
            "vote_amount",
            "permit"
        ],
        "additionalProperties": false,
        "$comment": "pair"
    },
    "$comment": "list"
}